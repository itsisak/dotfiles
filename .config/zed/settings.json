// Zed settings
//
// docs: https://zed.dev/docs/configuring-zed
// default settings: run `open default settings` command
//
{
  "auto_install_extensions": {
    "catppuccin": true,
    "git-firefly": true,
    "dockerfile": true,
    "html": true,
    "toml": true
  },
  "theme": "Catppuccin Macchiato",
  "buffer_font_size": 15,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "format_on_save": "off",
  "vim_mode": true,
  "cursor_blink": false
}
