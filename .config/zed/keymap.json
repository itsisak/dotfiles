// KEY BINDINGS FOR ZED
//
[
  {
    "context": "Editor",
    "bindings": {
      "cmd-k cmd-f": "editor::Format",
      "cmd-;": "editor::ToggleComments",
      "cmd-shift-v": "markdown::OpenPreviewToTheSide" 
    }
  },
  {
    "context": "Editor && vim_mode == normal && !menu",
    "bindings": {
      "space": ["workspace::SendKeystrokes", ":"],
      "shift-j": ["workspace::SendKeystrokes", "down down down down down down down down down down down down down down down"],
      "shift-k": ["workspace::SendKeystrokes", "up up up up up up up up up up up up up up up"]
    }
  }
]
